{
  "manifest_version": 3,
  "name": "Hello Extensions",
  "description": "Base Level Extension",
  "version": "1.0",

  "icons": {
    "16": "assets/sample/img/hello_extensions.png"
  },

  "background": {
    "service_worker": "assets/js/chrome-context-menu_bg.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["./assets/js/chrome-context-menu_cnt.js"]
    }
  ],

  "permissions": [
    "activeTab",
    "contextMenus"
  ]
}
